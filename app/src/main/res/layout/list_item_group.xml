<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect_transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/left_menu_rl_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_normal">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/margin_big"
            android:src="@drawable/ic_folder_grey600_24dp"
            android:tint="@color/gray_compose_mail" />

        <TextView
            android:id="@+id/tv_group_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_toRightOf="@+id/menu_icon"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_text_size_big" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_leftmenu_lv_childgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_leftmenu_lv_childleft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>